# Server
NODE_ENV=development
PORT=3000
HOST=localhost

# API
API_PREFIX=/api/v1

# CORS
CORS_ORIGIN=*
 
# ==============================================
# database
# ==============================================
DB_HOST=*****
DB_PORT=*****
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=*****
DB_DIALECT=postgres
DB_SCHEMA=*****
DB_LOGGING=false

# ==============================================
# redis (comentar esta seccion para usar cache local)
# ==============================================
REDIS_HOST=*****
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# CRYPTO
# ==============================================
ENCRYPTION_KEY=*****

# ==============================================
# LOGS
# ==============================================
LOG_LEVEL=debug

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_ACCESS_SECRET=*****
JWT_REFRESH_SECRET=*****
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_ISSUER=api-backend
JWT_AUDIENCE=api-client

# ==============================================
# RATE LIMITING CONFIGURATION
# ==============================================
RATE_LIMIT_WINDOW_MS=900000        # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100        # Max requests per window
RATE_LIMIT_AUTH_WINDOW_MS=900000   # 15 minutes for auth endpoints
RATE_LIMIT_AUTH_MAX_REQUESTS=10    # Max auth requests per window

# ==============================================
# LOGIN ATTEMPTS CONFIGURATION
# ==============================================
LOGIN_MAX_ATTEMPTS=5
LOGIN_BLOCK_DURATION_MS=900000     # 15 minutes in milliseconds
LOGIN_RESET_AFTER_MS=3600000       # 1 hour in milliseconds

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis TTL (in seconds)
REDIS_TTL_RATE_LIMIT=900           # 15 minutes
REDIS_TTL_REQUEST_LOCK=30          # 30 seconds
REDIS_TTL_IDEMPOTENCY=86400        # 24 hours
REDIS_TTL_BLACKLIST_TOKEN=900      # 15 minutes
REDIS_TTL_REFRESH_TOKEN=604800     # 7 days

# ==============================================
# PAGINATION CONFIGURATION
# ==============================================
PAGINATION_DEFAULT_PAGE=1
PAGINATION_DEFAULT_LIMIT=10
PAGINATION_MAX_LIMIT=100

# ==============================================
# REQUEST LOCK CONFIGURATION
# ==============================================
REQUEST_LOCK_TIMEOUT_MS=30000      # 30 seconds